{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nameprefix": {
            "type": "String"
        },
        "tenantId": {
            "type": "String"
        },
        "location": {
            "defaultValue": "UKSouth",
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "sku-function-webplan": {
            "type": "object"
        },
        "AppInsights-InstrumentationKey": {
            "type": "string"
        }
    },
    "variables": {
        "name-function": "[concat(parameters('nameprefix'), 'funccacheflush')]",
        "name-webplan-function": "[concat(parameters('nameprefix'), 'funcplancacheflush')]",
        "name-storage-function": "[concat(parameters('nameprefix'), 'fstorecf')]",
        "sku-storage": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "datastorage-name": "[concat('c19dash', first(parameters('environment')), 'uksdatastore')]",
        "datastorage-resourceId": "[resourceId(concat('rg-datastore-', parameters('environment')), 'Microsoft.Storage/storageAccounts', variables('datastorage-name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('name-webplan-function')]",
            "location": "[parameters('location')]",
            "sku": "[parameters('sku-function-webplan')]",
            "properties": {
                "kind": "functionapp"
            },
            "tags": {
                "C19-Environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('name-function')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('name-webplan-function'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('name-storage-function'))]"
            ],
            "kind": "functionapp",
            "identity": {
                "type": "SystemAssigned"
            },
            "tags": {
                "C19-Environment": "[parameters('environment')]",
                "C19-Resource-Type": "function-cacheflush"
            },
            "properties": {
                "enabled": true,
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[parameters('AppInsights-InstrumentationKey')]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('name-storage-function'), ';AccountKey=', listKeys(variables('name-storage-function'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('name-storage-function'), ';AccountKey=', listKeys(variables('name-storage-function'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "fn-c19-cache-flush"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "dotnet"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "tenantId",
                            "value": "[parameters('tenantId')]"
                        },
                        {
                            "name": "ENVIRONMENT",
                            "value": "[parameters('environment')]"
                        },
                        {
                            "name": "DataStorageConnectionstring",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('datastorage-name'), ';AccountKey=', listKeys(variables('datastorage-resourceId'),'2019-06-01').keys[0].value)]"
                        }
                    ]
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('name-webplan-function'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('name-function'), '/web')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('name-function'))]"
            ],
            "properties": {
                "cors": {
                    "allowedOrigins": [
                        "*"
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('name-storage-function')]",
            "location": "[parameters('location')]",
            "sku": "[variables('sku-storage')]",
            "kind": "StorageV2",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": true,
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            },
            "tags": {
                "C19-Environment": "[parameters('environment')]"
            }
        }
    ]
}
